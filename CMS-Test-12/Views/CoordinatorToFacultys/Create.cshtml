@model CMS_Test_12.ViewModels.CoordinatorInFacultyViewModels
@{
	ViewBag.Title = "Create";
}

<h2>Assign Coordinator to Faculty</h2>

@using (Html.BeginForm("Create", "CoordinatorToFacultys", FormMethod.Post))
{
	<div class="form-group">
		@Html.LabelFor(m => m.CoordinatorToFaculty.CoordinatorId)
		@Html.DropDownListFor(m => m.CoordinatorToFaculty.CoordinatorId,
			new SelectList(Model.MarketingCoordinators, "Id", "Name"),
			"Select Coordinator",
			new { @class = "form-control" }
		)
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.CoordinatorToFaculty.Faculty.Name)
		@Html.DropDownListFor(m => m.CoordinatorToFaculty.FacultyId,
			new SelectList(Model.Faculties, "Id", "Name"),
			"Select Faculty",
			new { @class = "form-control" }
		)
	</div>

	<button type="submit" class="btn btn-primary">Assign</button>
}


